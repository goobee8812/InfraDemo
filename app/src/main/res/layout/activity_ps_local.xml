<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.skylandertech.www.infrademo.PsLocalActivity">
    <Button
        android:id="@+id/btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_test"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_right"
            android:layout_alignLeft="@+id/btn_down"
            android:layout_alignStart="@+id/btn_down"
            android:layout_marginBottom="32dp"
            android:text="上" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="下"
            android:id="@+id/btn_down" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_right"
            android:layout_alignBottom="@+id/btn_right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:text="左"
            android:id="@+id/btn_left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="右"
            android:id="@+id/btn_right" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_left"
            android:layout_alignBottom="@+id/btn_left"
            android:layout_alignLeft="@+id/btn_down"
            android:layout_alignStart="@+id/btn_down"
            android:text="执行" />
    </RelativeLayout>
</LinearLayout>
